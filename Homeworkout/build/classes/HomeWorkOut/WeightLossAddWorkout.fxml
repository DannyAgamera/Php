<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #6a5acd;" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeWorkOut.WeightLossAddWorkoutController">
    <stylesheets>
        <URL value="@weightloss.css" />
    </stylesheets>
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #483d8b;" text="New Workout" textFill="LIGHTSALMON">
         <font>
            <Font name="Tahoma Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="workoutName" layoutX="150.0" layoutY="100.0" prefHeight="40.0" prefWidth="300.0" promptText="Workout Name">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="repsNumber" layoutX="150.0" layoutY="170.0" prefHeight="40.0" prefWidth="300.0" promptText="Number of Reps">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="setsNumber" layoutX="150.0" layoutY="240.0" prefHeight="40.0" prefWidth="300.0" promptText="Number of Sets">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </TextField>
      <Button layoutX="220.0" layoutY="320.0" mnemonicParsing="false" onAction="#addWorkout" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #6a5acd;" text="Add Workout" textFill="LIGHTSALMON">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
         <effect>
            <DropShadow blurType="GAUSSIAN" color="DARKSLATEBLUE" />
         </effect>
      </Button>
   </children>
</AnchorPane>
